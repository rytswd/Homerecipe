# Color setup for zsh-syntax-highlighting

# Enable highlighters
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern)

# Override highlighter colors
ZSH_HIGHLIGHT_STYLES[default]=none
ZSH_HIGHLIGHT_STYLES[unknown-token]=fg=red
ZSH_HIGHLIGHT_STYLES[reserved-word]=fg=green
ZSH_HIGHLIGHT_STYLES[alias]=fg=087
ZSH_HIGHLIGHT_STYLES[builtin]=fg=087
ZSH_HIGHLIGHT_STYLES[function]=fg=087
ZSH_HIGHLIGHT_STYLES[command]=fg=087
ZSH_HIGHLIGHT_STYLES[precommand]=none
ZSH_HIGHLIGHT_STYLES[commandseparator]=fg=yellow
ZSH_HIGHLIGHT_STYLES[hashed-command]=none
ZSH_HIGHLIGHT_STYLES[path]=none
ZSH_HIGHLIGHT_STYLES[globbing]=none
ZSH_HIGHLIGHT_STYLES[history-expansion]=fg=none
ZSH_HIGHLIGHT_STYLES[single-hyphen-option]=fg=141
ZSH_HIGHLIGHT_STYLES[double-hyphen-option]=fg=141
ZSH_HIGHLIGHT_STYLES[back-quoted-argument]=none
ZSH_HIGHLIGHT_STYLES[single-quoted-argument]=fg=247
ZSH_HIGHLIGHT_STYLES[double-quoted-argument]=fg=247
ZSH_HIGHLIGHT_STYLES[dollar-double-quoted-argument]=fg=087
ZSH_HIGHLIGHT_STYLES[back-double-quoted-argument]=fg=087
ZSH_HIGHLIGHT_STYLES[assign]=none
